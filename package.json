{
  "name": "vanilla-boilerplate",
  "version": "1.0.0",
  "description": "A simple web server that can use vanilla scripts and TypeScript.",
  "author": "mornya <mornya78@gmail.com>",
  "private": true,
  "repository": "",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./types",
  "scripts": {
    "postinstall": "lintest install || exit 0",
    "postuninstall": "lintest install || exit 0",
    "build": "NODE_ENV=production && ts-node --files --pretty --project ./tsconfig-cli.json ./build.ts",
    "start": "nodemon --verbose",
    "check": "lintest check",
    "lint": "lintest lint",
    "lint:fix": "lintest lint --fix",
    "test": "lintest test",
    "test:watch": "lintest test --watch",
    "test:coverage": "lintest test --coverage"
  },
  "engines": {
    "node": ">=12.13",
    "npm": ">=6"
  },
  "dependencies": {
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/cssnano": "^4.0.1",
    "@types/fibers": "^3.1.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.6",
    "@types/postcss-flexbugs-fixes": "^4.2.1",
    "@types/webpack-dev-server": "^4.1.0",
    "@types/webpack-env": "^1.16.2",
    "autoprefixer": "^10.3.5",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.3.0",
    "cssnano": "^5.0.8",
    "eslint": "^7.32.0",
    "fibers": "^5.0.0",
    "fork-ts-checker-webpack-plugin": "^6.3.3",
    "html-webpack-plugin": "^5.3.2",
    "node-sass": "^6.0.1",
    "postcss": "^8.3.7",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.4.1",
    "resolve-url-loader": "^4.0.0",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.3",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "nodemonConfig": {
    "ignore": [
      "node_modules",
      "public",
      "src",
      "test",
      "types",
      ".idea",
      ".git",
      ".vscode",
      "**/*.(test|spec).[t|j]s"
    ],
    "watch": [
      "package.json",
      "tsconfig.json",
      "tsconfig-cli.json",
      "tsconfig-default.json",
      "server.ts",
      "dev-server.config.ts",
      "webpack.config.ts"
    ],
    "ext": "js, ts",
    "exec": "ts-node --files --pretty --project ./tsconfig-cli.json -r tsconfig-paths/register ./server.ts"
  }
}
